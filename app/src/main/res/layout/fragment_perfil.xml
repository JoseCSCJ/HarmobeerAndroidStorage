<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="br.com.opet.tds.harmobeerAndroid.activity.MainActivity"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <EditText
        android:id="@+id/usernamePer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignParentStart="true"
        android:hint="Username" />

    <EditText
        android:id="@+id/emailPer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:hint="Email" />

    <Button
        android:id="@+id/editarUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Editar Informações"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/senhaAnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:inputType="textPassword"
        android:hint="Senha Antiga" />

    <EditText
        android:id="@+id/senhaPer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:inputType="textPassword"
        android:hint="Senha Nova" />

    <EditText
        android:id="@+id/senhaConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:inputType="textPassword"
        android:hint="Confirme a senha nova" />

    <Button
        android:id="@+id/alterarSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:text="Alterar Senha"
        android:textStyle="bold"
        />

</RelativeLayout>