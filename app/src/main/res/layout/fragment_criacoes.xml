<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="br.com.opet.tds.harmobeerAndroid.activity.MainActivity"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/listUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:text="Username" />

        <Spinner
        android:id="@+id/viewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listUser" />

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_below="@+id/viewUser"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:src="@mipmap/ic_camera"
        />

    <TextView
        android:id="@+id/textCerv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageUser"
        android:text="Cervejas" />

    <TextView
        android:id="@+id/textPrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/viewCerv"
        android:text="Pratos" />

    <ListView
        android:id="@+id/viewPrato"
        android:layout_width="wrap_content"
        android:layout_height="126dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textPrato" />

    <ListView
        android:id="@+id/viewCerv"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textCerv" />


</RelativeLayout>